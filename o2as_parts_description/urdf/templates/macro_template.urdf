<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="MACRONAME">
  <xacro:macro name="MACRONAME" params="prefix parent *origin">
    <link name="${prefix}MACRONAME">
      <visual>
        <origin rpy="1.5707 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://o2as_parts_description/meshes/PARTNAME.dae" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
      <collision>
        <origin rpy="1.5707 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://o2as_parts_description/meshes/PARTNAME.vhacd.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}MACRONAME_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}MACRONAME"/>
      <xacro:insert_block name="origin"/>
    </joint>
  
  <!-- Extra frames for assembly and motion planning, if any -->
<!-- #EXTRAFRAMES -->
  </xacro:macro>
</robot>
