<launch>

  <arg name="marker_id"		default="26"/>
  <arg name="marker_size"	default="0.070"/>    <!-- in meters -->
  <arg name="camera_name"	default="a_phoxi_m_camera"/>
  <arg name="camera_frame"	default="$(arg camera_name)_from_b_bot"/>
  <arg name="marker_frame"	default="aruco_marker_frame"/>
  <arg name="reference_frame"	default=""/>
  <arg name="corner_refinement"	default="LINES"/>

  <include file="$(find o2as_phoxi_camera)/launch/o2as_phoxi_camera.launch">
    <arg name="camera_name"		value="$(arg camera_name)"/>
    <arg name="frame"			value="$(arg camera_frame)"/>
    <arg name="trigger_mode"		value="0"/>
  </include>

  <node name="aruco_tracker" pkg="o2as_aruco_ros" type="o2as_single"
  	output="screen">
    <remap from="/camera_info"	to="/$(arg camera_name)/camera_info"/>
    <remap from="/image"	to="/$(arg camera_name)/texture"/>
    <remap from="/depth"	to="/$(arg camera_name)/depth_map"/>

    <!-- Other parameters -->
    <param name="image_is_rectified"	value="false"/>
    <param name="marker_id"		value="$(arg marker_id)"/>
    <param name="marker_size"		value="$(arg marker_size)"/>
    <param name="reference_frame"	value="$(arg reference_frame)"/>
    <param name="camera_frame"		value="$(arg camera_frame)"/>
    <param name="marker_frame"		value="$(arg marker_frame)"/>
    <param name="corner_refinement"	value="$(arg corner_refinement)" />
  </node>

  <arg name="command_args"
       value="-d $(find o2as_aruco_ros)/launch/phoxi.rviz"/>
  <node name="$(anon rviz)" pkg="rviz" type="rviz"
	respawn="false" args="$(arg command_args)" output="screen"/>

  <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure"/>

</launch>
