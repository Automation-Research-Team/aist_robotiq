<?xml version="1.0" ?>
<launch>

  <arg name="id" default="InstalledExamples-basic-example"/>
  <!-- <arg name="camera_id"		default="2018-09-016-LC3"/> -->
  <arg name="camera_name"	default="a_phoxi_m_camera"/>
  <arg name="camera_frame"	default="$(arg camera_name)_calibrated"/>
  <arg name="rate"		default="10"/>
  <arg name="manager"		default=""/>
  <arg name="nthreads"		default="4"/>
  
  <include file="$(find aist_phoxi_camera)/launch/run.launch">
    <arg name="id"		value="$(arg id)"/>
    <arg name="camera_name"	value="$(arg camera_name)"/>
    <arg name="frame"		value="$(arg camera_frame)"/>
    <arg name="trigger_mode"	value="0"/>
    <arg name="rate"		value="$(arg rate)"/>
    <arg name="manager"		value="$(arg manager)"/>
  </include>

  <include ns="$(arg camera_name)"
	   file="$(find aist_depth_filter)/launch/run.launch">
    <arg name="camera_info_topic"	value="camera_info"/>
    <arg name="image_topic"		value="texture"/>
    <arg name="depth_topic"		value="depth_map"/>
    <arg name="normal_topic"		value="normal_map"/>
    <arg name="manager"			value="$(arg manager)"/>
  </include>

  <node name="$(anon rviz)" pkg="rviz" type="rviz"
	respawn="false" output="screen"
	args="-d $(find aist_depth_filter)/launch/phoxi.rviz"/>

  <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure"/>

</launch>
