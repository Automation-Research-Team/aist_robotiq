<?xml version="1.0"?>
<launch>

  <arg name="scene"	default="ceatec_base_scene"/>
  <arg name="debug"	default="false"/>
  <arg name="gui"	default="true"/>
  <arg name="paused"	default="false"/>
  <arg name="headless"	default="false"/>
  <arg name="x"		default="0.0" />
  <arg name="y"		default="0.0" />
  <arg name="z"		default="0.0" />
  <arg name="yaw"	default="0.0" />
  <arg name="xr"	value="$(eval arg('x') - 0.3)" />
  <arg name="yr"	value="$(eval arg('y') - 0.5)" />

  <!-- Start Gazebo with a blank world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug"		value="$(arg debug)" />
    <arg name="gui"		value="$(arg gui)" />
    <arg name="paused"		value="$(arg paused)"/>
    <arg name="use_sim_time"	value="true"/>
    <arg name="headless"	value="$(arg headless)"/>
  </include>

  <!-- Setup controllers -->
  <rosparam file="$(find fetch_gazebo)/config/default_controllers.yaml"
	    command="load"/>

  <!-- Start robot_state_publisher -->
  <node name="robot_state_publisher"
	pkg="robot_state_publisher" type="robot_state_publisher">
    <param name="publish_frequency" value="100.0"/>
  </node>

  <!-- Give this robot a serial number and version -->
  <param name="robot/serial"	value="ABCDEFGHIJKLMNOPQRSTUVWX"/>
  <param name="robot/version"	value="0.0.1"/>

  <!-- Load fetch urdf to param "fetch_description". -->
  <!-- Put a robot in gazebo, make it look pretty -->
  <param name="fetch_description"
  	 command="$(find xacro)/xacro --inorder '$(find
  		  fetch_gazebo)/robots/fetch.gazebo.xacro'"/>
  <node name="robot_spawner" pkg="gazebo_ros" type="spawn_model"
  	respawn="false" output="screen"
        args="-urdf -param fetch_description -model fetch -unpause
  	      -x $(arg xr) -y $(arg yr) -z $(arg z)"/>
  <node name="prepare_robot"
  	pkg="fetch_gazebo" type="prepare_simulated_robot.py"/>

  <!-- Load environment urdf to param "environment_description". -->
  <param name="environment_description"
  	 command="$(find xacro)/xacro --inorder '$(find
  		  aist_description)/scene/urdf/$(arg
		  scene)_environment.urdf.xacro'"/>
  <node name="environment_spawner" pkg="gazebo_ros" type="spawn_model"
  	respawn="false" output="screen"
        args="-urdf -param environment_description -model environment -unpause
  	      -x $(arg x) -y $(arg y) -z $(arg z)"/>

  <param name="robot_description"
  	 command="$(find xacro)/xacro --inorder '$(find
  		  aist_description)/scene/urdf/$(arg scene).urdf.xacro'"/>

  <!-- Head Camera Pipeline -->
  <include file="$(find fetch_gazebo)/launch/include/head_camera.launch.xml"/>

</launch>
