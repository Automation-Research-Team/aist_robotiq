<?xml version="1.0"?>
<launch>
  <arg name="limited" default="false"/>
  <arg name="paused"  default="true"/>
  <arg name="gui"     default="true"/>
  <arg name="scene"   default="aist_base_scene"/>
  <!-- Gazebo needs to start up paused in order for us to be able to set the initial joint configurations.
       This is a known bug as of July 2018. -->

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused"     value="$(arg paused)"/>
    <arg name="gui"        value="$(arg gui)"/>
    <arg name="verbose"    value="true"/>
  </include>

  <!-- send robot urdf to param server -->
  <!-- In this case the "robot" is the ensemble of the 3 arms -->
  <include file="$(find aist_scene_description)/launch/scene_upload.launch">
    <arg name="scene" value="$(arg scene)"/>
  </include>

  <arg name="bot0_prefix" value="a_bot_"
       if="$(eval arg('scene') == 'aist_base_scene')"/>
  <arg name="bot1_prefix" value="b_bot_"
       if="$(eval arg('scene') == 'aist_base_scene')"/>
  <arg name="bot0_prefix" value="c_bot_"
       unless="$(eval arg('scene') == 'aist_base_scene')"/>
  <arg name="bot1_prefix" value="d_bot_"
       unless="$(eval arg('scene') == 'aist_base_scene')"/>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <!-- Initial pose modified on  -->
  <!-- Do not change this without updating the home pose in aist_base_scene.srdf accordingly. -->
  <!-- <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" -->
  <!--       args="-urdf -param robot_description -model aist_bots -->
  <!--             -J $(arg bot0_prefix)elbow_joint 1.57618 -->
  <!-- 	      -J $(arg bot0_prefix)shoulder_lift_joint -2.36605 -->
  <!-- 	      -J $(arg bot0_prefix)shoulder_pan_joint 1.57138 -->
  <!--             -J $(arg bot0_prefix)wrist_1_joint -0.780539 -->
  <!-- 	      -J $(arg bot0_prefix)wrist_2_joint -1.57082 -->
  <!-- 	      -J $(arg bot0_prefix)wrist_3_joint 0 -->
  <!--             -J $(arg bot1_prefix)elbow_joint 1.57618 -->
  <!-- 	      -J $(arg bot1_prefix)shoulder_lift_joint -2.36605 -->
  <!-- 	      -J $(arg bot1_prefix)shoulder_pan_joint 1.57138 -->
  <!--             -J $(arg bot1_prefix)wrist_1_joint -0.780539 -->
  <!-- 	      -J $(arg bot1_prefix)wrist_2_joint -1.57082 -->
  <!-- 	      -J $(arg bot1_prefix)wrist_3_joint 0 -->
  <!--             -unpause" -->
  <!-- 	respawn="false" -->
  <!-- 	output="screen"/> -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param robot_description -model aist_bots
              -J $(arg bot0_prefix)elbow_joint -1.5761
	      -J $(arg bot0_prefix)shoulder_lift_joint -0.780539
	      -J $(arg bot0_prefix)shoulder_pan_joint -1.57138
              -J $(arg bot0_prefix)wrist_1_joint  -2.361053653
	      -J $(arg bot0_prefix)wrist_2_joint  1.57082
	      -J $(arg bot0_prefix)wrist_3_joint 0
              -J $(arg bot1_prefix)elbow_joint 1.57618
	      -J $(arg bot1_prefix)shoulder_lift_joint -2.36605
	      -J $(arg bot1_prefix)shoulder_pan_joint 1.57138
              -J $(arg bot1_prefix)wrist_1_joint -0.780539
	      -J $(arg bot1_prefix)wrist_2_joint -1.57082
	      -J $(arg bot1_prefix)wrist_3_joint 0
              -unpause"
	respawn="false"
	output="screen"/>
  <include file="$(find aist_gazebo)/launch/controller_utils.launch"/>

  <!-- spawn controllers -->
  <rosparam file="$(find aist_gazebo)/controller/$(arg
		  bot0_prefix)controller.yaml"
	    command="load"/>
  <node name   ="$(arg bot0_prefix)controller_spawner"
	pkg    ="controller_manager"
	type   ="controller_manager"
	args   ="spawn $(arg bot0_prefix)controller"
	respawn="false"
	output ="screen"/>
  <rosparam file="$(find aist_gazebo)/controller/$(arg
		  bot1_prefix)controller.yaml"
	    command="load"/>
  <node name   ="$(arg bot1_prefix)controller_spawner"
	pkg    ="controller_manager"
	type   ="controller_manager"
	args   ="spawn $(arg bot1_prefix)controller"
	respawn="false"
	output ="screen"/>

</launch>
