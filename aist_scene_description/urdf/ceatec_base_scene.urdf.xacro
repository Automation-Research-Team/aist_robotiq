<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="ceatec_base_scene_with_fetch" >

  <!-- Fetch robot -->
  <xacro:include filename="$(find fetch_gazebo)/robots/fetch.gazebo.xacro"/>

  <!-- CEATEC base scene -->
  <xacro:include filename="$(find aist_scene_description)/urdf/ceatec_base_scene_without_fetch.urdf.xacro"/>

  <!-- I would like to remove the "world" link definition, but
       apparently it is necessary for Gazebo -->
  <joint name="world_base_joint" type="planar">
    <parent link="world"/>
    <child  link="base_link"/>
    <origin xyz="0 -0.5 0" rpy="0 0 0"/>
  </joint>

</robot>
