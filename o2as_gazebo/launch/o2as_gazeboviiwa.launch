<?xml version="1.0"?>
<launch>
  <arg name="limited" default="false"/>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <group ns="a_bot">
    <!-- send robot urdf to param server -->
    <include file="$(find o2as_scene_description)/launch/ur10_upload.launch">
        <arg name="limited" value="$(arg limited)"/>
        <arg name="prefix" value="a_bot_"/>
    </include>

    <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model a_bot -z 0.1" respawn="false" output="screen" />
    <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>
    <rosparam file="$(find o2as_gazebo)/controller/a_bot_ur_controller.yaml" command="load"/>
    <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>
  </group>

    <group ns="b_bot">
    <!-- send robot urdf to param server -->
    <include file="$(find o2as_scene_description)/launch/ur5_upload.launch">
        <arg name="limited" value="$(arg limited)"/>
        <arg name="prefix" value="b_bot_"/>
    </include>

    <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model b_bot -x 0.4 -y 0.4 -z 0.1" respawn="false" output="screen" />
    <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>
    <rosparam file="$(find o2as_gazebo)/controller/b_bot_ur_controller.yaml" command="load"/>
    <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>
  </group>
 

  <group ns="c_bot">
    <!-- send robot urdf to param server -->
    <include file="$(find o2as_scene_description)/launch/ur3_upload.launch">
        <arg name="limited" value="$(arg limited)"/>
        <arg name="prefix" value="c_bot_"/>
    </include>

    <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model c_bot -x 0.4 -y -0.4 -z 0.1" respawn="false" output="screen" />
    <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>
    <rosparam file="$(find o2as_gazebo)/controller/c_bot_ur_controller.yaml" command="load"/>
    <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>
  </group>

</launch>
