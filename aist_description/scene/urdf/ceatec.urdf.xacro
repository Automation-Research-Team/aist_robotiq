<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro" name="ceatec" >

  <!-- Fetch robot in empty scene (root = "map") -->
  <xacro:include filename="$(find aist_description)/scene/urdf/sfetch_base_scene.urdf.xacro"/>

  <!-- Environment of "ceatec" scene (root = "world") -->
  <xacro:include filename="$(find aist_description)/scene/urdf/ceatec_environment.urdf.xacro"/>

  <!-- Make "map" frame a child of "world" frame -->
  <joint name="world_map_joint" type="fixed">
    <parent link="world"/>
    <child  link="map"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
